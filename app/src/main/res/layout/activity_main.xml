<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dateTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:hint="Date selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old date Picker"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTv"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/datePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old date Picker \n dialog"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTv"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialDatePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material date \n Picker"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/datePicker1"
        app:layout_constraintTop_toBottomOf="@id/datePicker1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialDatePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material \n with start/end \n date"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/materialDatePicker1"
        app:layout_constraintTop_toTopOf="@id/materialDatePicker1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialRangePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material Range \n Picker"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/materialDatePicker1"
        app:layout_constraintTop_toBottomOf="@id/materialDatePicker1"/>

</androidx.constraintlayout.widget.ConstraintLayout>